# AppVantix Web Builder Environment Variables
# Copy this file to .env.local and add your actual API keys

# AI Provider API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key_here
HuggingFace_API_KEY=your_huggingface_key_here
OPEN_ROUTER_API_KEY=your_openrouter_key_here
XAI_API_KEY=your_xai_key_here
TOGETHER_API_KEY=your_together_key_here
TOGETHER_API_BASE_URL=https://api.together.xyz

# Local LLM Configuration
OLLAMA_API_BASE_URL=http://localhost:11434

# AWS Bedrock Configuration (JSON string)
AWS_BEDROCK_CONFIG={}

# Application Configuration
VITE_LOG_LEVEL=info
DEFAULT_NUM_CTX=32768
NODE_ENV=development
PORT=5173

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration  
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AppVantix Configuration
VITE_APP_NAME="AppVantix Web Builder"
VITE_APP_DESCRIPTION="Transform LinkedIn profiles into stunning professional websites"
VITE_COMPANY_NAME="AppVantix LLC"
VITE_SUPPORT_EMAIL="support@appvantix.com"
VITE_BRAND_COLOR="#6366f1"

# Security Configuration
VITE_ENABLE_PAYWALL=true
VITE_ENABLE_USER_MANAGEMENT=true
VITE_REQUIRE_SUBSCRIPTION=true

# Feature Flags
VITE_ENABLE_LINKEDIN_IMPORT=true
VITE_ENABLE_PORTFOLIO_TEMPLATES=true
VITE_ENABLE_AI_SUGGESTIONS=true
VITE_ENABLE_CUSTOM_DOMAINS=true
